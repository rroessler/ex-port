{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,

        "noImplicitAny": true,
        "noImplicitOverride": true,
        "strictNullChecks": true,

        "rootDir": "lib",
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "typings"
    },

    "include": ["lib"],
    "exclude": ["dist", "node_modules"]
}
